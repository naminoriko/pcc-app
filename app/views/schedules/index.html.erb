<div class='main'>
  <div class='top-image'>
    <%= image_tag '1605802.jpg', alt: 'クラブ画像', class: 'club-image' %>
  </div>
 
  <%= render "messages/index.html.erb" %>
  
 
  <%= month_calendar events: @schedules do |date, schedules| %>
      <%= date.day %>
      <% schedules.each do |schedule| %>
        <%= link_to schedule.place, schedule_path(schedule.id) %>
        <br><%= schedule.start_time.strftime("%H:%M")%>
        ~
        <%= schedule.finish_time.strftime("%H:%M")%>   
        <% if schedule.applicants.count >= 1 %>
          <%= "🈸" %>
        <% end %>
      <% end %>
  <% end %>
</div>