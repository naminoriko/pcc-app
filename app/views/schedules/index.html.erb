<div class="wrapper">
  <div class="header">
    <%= render "shared/header" %>
  </div>

  <div class='main'>
    <%= month_calendar events: @schedules do |date, schedules| %>
      <%= date.day %>
      <% schedules.each do |schedule| %>
        <%= schedule.place %>
        <br><%= schedule.start_time.strftime("%H:%M")%>
        ~
        <%= schedule.finish_time.strftime("%H:%M")%>   
        <% if  schedule.participant != 0 %>
          <%= link_to "参加申請", schedule_path(schedule.id) %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  
  <%= link_to "予定を入れる", new_schedule_path() %>

  

  

  <div class="footer">
    <%= render "shared/footer" %>
  </div>
</div>
