<div class='main'>
  <div class='top-image'>
    <%= image_tag '1605802.jpg', alt: 'クラブ画像', class: 'club-image' %>
  </div>
 
  <%= render "messages/index.html.erb" %>
  
  <div class="schedule">
    <div class="schedule-top">

      <div class="schedule-left">  
        <div class="schedule-title">
          スケジュール
        </div>
        <div class="schedule-introduce">
          <%= link_to "参加申請はこちらから", new_schedule_path %>
        </div>
      </div>
      
      <div class="schedule-right">
        <%= month_calendar events: @schedules do |date, schedules| %>
            <%= date.day %>
            <% schedules.each do |schedule| %>
              <%= link_to schedule.place, schedule_path(schedule.id) %>
              <br><%= schedule.start_time.strftime("%H:%M")%>
              ~
              <%= schedule.finish_time.strftime("%H:%M")%>   
              <% if schedule.applicants.count >= 1 %>
                <%= "🈸" %>
              <% end %>
            <% end %>
        <% end %>
      </div>
     
    </div>
  </div>
</div>