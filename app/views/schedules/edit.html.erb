<div class="wrapper">
  <div class="header">
     <%= render "shared/second-header" %>
  </div>

<%= form_with(model: @schedule, local: true) do |form| %>

    <div class="time">
    <%= form.label :開始時間 %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="time">
    <%= form.label :終了時間 %>
    <%= form.datetime_select :finish_time %>
  </div>

   <div class="place">
    <%= form.label :場所 %>
    <%= form.text_field :place %>
  </div>

  <div class="activity">
    <%= form.label :アクティビティ %>
    <%= form.text_field :activity %>
  </div>

  <div class="participant">
    <%= form.label :募集人数 %>
    <%= form.text_field :participant %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>

  <% end %>

  <div class="footer">
    <%= render "shared/footer" %>
  </div>
</div>
